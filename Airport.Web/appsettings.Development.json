{
  "ConnectionStrings": {
    "Default": "mongodb://localhost:27017"
  },
  "AirportDbConfiguration": {
    "ConnectionString": "mongodb://localhost:27017",
    "FlightsCollectionName": "Flights",
    "RoutesCollectionName": "Routes",
    "StationsCollectionName": "Stations",
    "TrafficLightsCollectionName": "TrafficLights",
    "DatabaseName": "AirportDb"
  },
  "ClientOrigins": [
    "http://localhost:4200"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss.fff "
      }
    }
  },
  "AllowedHosts": "*"
}
